<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="dataaccess.entity.LoanCondition" table="loan_condition">
        <meta attribute="class-description">This class contains the LoanCondition detail.</meta>
        <id name="id" column="id" type="java.lang.Integer"><generator class="native"/></id>
        <property name="name" column="name" type="string"/>
        <property name="minAmount" column="min_amount" type="integer"/>
        <property name="maxAmount" column="max_amount" type="integer"/>
        <property name="minDuration" column="min_duration" type="integer"/>
        <property name="maxDuration" column="max_duration" type="integer"/>
    </class>
</hibernate-mapping>